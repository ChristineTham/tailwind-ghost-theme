<header class="pb-4 mb-8 bg-white shadow-lg">
  <div class="mx-auto rounded-lg shadow-xl max-w-7xl">
    <div {{#if cover_image}}style="background-image: url({{cover_image}})"{{/if}} class="flex items-center justify-center h-64 bg-gray-200 bg-center bg-cover rounded-t-lg"> 
      <p class="text-4xl font-bold text-gray-700">{{name}}</p>
    </div>
    <div class="px-8 bg-white rounded-b-lg">
      {{#if profile_image}}
      <div class="relative">
        <img class="absolute right-0 w-16 h-16 mr-4 -mt-8 rounded-full shadow-lg" src="{{profile_image}}" alt="{{name}}">
      </div>
      {{/if}}
      <div class="pt-8 pb-8">
        {{#if bio}}
          <p class="mt-6 text-gray-700">{{bio}}</p>
        {{/if}}
        <div class="flex justify-around mt-8">
          {{#if location}}
            <div class="flex items-center mt-2 text-sm leading-5 text-gray-500 sm:mr-6">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
                {{location}}
            </div>       
          {{/if}}
          {{#if website}}
            <div class="flex items-center mt-2 text-sm leading-5 text-gray-500 sm:mr-6">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <a href="{{website}}">Web site</a>
            </div>       
          {{/if}}
          {{#if facebook}}
            <div class="flex items-center mt-2 text-sm leading-5 text-gray-500 sm:mr-6">
              <div class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" >
                {{> icons/facebook}}
              </div>
              <a href="{{facebook_url}}">{{facebook}}</a>
            </div>       
          {{/if}}
          {{#if twitter}}
            <div class="flex items-center mt-2 text-sm leading-5 text-gray-500 sm:mr-6">
              <div class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" >
                {{> icons/twitter}}
              </div>
              <a href="{{twitter_url}}">{{twitter}}</a>
            </div>       
          {{/if}}
        </div>
      </div>
    </div>
  </header>
