<header class="pb-4 mb-8 bg-gray-200 shadow-lg">
  <div class="mx-auto rounded-lg shadow-xl max-w-7xl">
    <div {{#if @site.cover_image}}style="background-image: url({{@site.cover_image}})"{{/if}} class="flex items-center justify-center h-64 bg-gray-200 bg-center bg-cover rounded-t-lg"> 
      <div class="flex flex-col items-center">
        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <h1 class="text-4xl font-bold leading-tight text-white">
                {{@site.title}}
          </h1>
        </div>
        {{#if @site.description}}
          <p class="mt-6 text-lg text-white">{{@site.description}}</p>
        {{/if}}        
      </div>
    </div>
  </header>
