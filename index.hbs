{{!< default}}
<header class="pb-4 mb-8 bg-gray-200 bg-center bg-cover shadow-lg " {{#if @site.cover_image}}style="background-image: url({{@site.cover_image}})"{{/if}} >
  <div class="mx-auto shadow-xl max-w-7xl">
    <div class="flex items-center justify-center h-64"> 
      <div class="flex flex-col items-center">
        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <h1 class="text-4xl font-bold leading-tight text-white">
                {{@site.title}}
          </h1>
        </div>
        {{#if @site.description}}
          <p class="mt-6 text-lg text-white">{{@site.description}}</p>
        {{/if}}        
      </div>
    </div>
  </div>
</header>
    
<main>
  <div class="justify-center block md:flex-wrap md:flex">
    {{#foreach posts visibility="all"}}
      {{> "card"}} {{!-- partials/card.hbs --}}
    {{/foreach}}
  </div>  
</main>
